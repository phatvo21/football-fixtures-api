{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "@app/football-fixtures/(.*)": "apps/football-fixtures/src/$1",
    "@app/common/(.*)": "libs/common/src/$1"
  }
}
